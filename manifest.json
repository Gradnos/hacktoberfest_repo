{
  "manifest_version": 3,
  "name": "Hello World Side Panel",
  "version": "1.0",
  "description": "Displays a side panel with Hello World on every page",
  "permissions": ["sidePanel", "tabs"],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
     "js": ["content.js"],
        "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}