{
  "manifest_version": 3,
  "name": "ChatGPT Side Popup",
  "version": "1.0",
  "description": "Send selected text to ChatGPT in a popup window",
  "permissions": ["activeTab", "storage", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
